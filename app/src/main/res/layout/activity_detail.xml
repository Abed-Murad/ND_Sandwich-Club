<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.udacity.sandwichclub.DetailActivity">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop" />



        <TextView
            android:id="@+id/detail_also_known_as_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_iv"
            android:text="@string/detail_also_known_as_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/also_known_tv"
            android:paddingStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/image_iv"
            android:layout_toEndOf="@+id/detail_also_known_as_tv" />

        <TextView
            android:id="@+id/detail_ingredients_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/also_known_tv"
            android:text="@string/detail_ingredients_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ingredients_tv"
            android:layout_width="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"

            android:layout_below="@+id/also_known_tv"
            android:layout_toEndOf="@+id/detail_ingredients_tv" />


        <TextView
            android:id="@+id/detail_place_of_origin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredients_tv"
            android:text="@string/detail_place_of_origin_label"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/origin_tv"
            android:layout_width="wrap_content"
            android:paddingStart="8dp"

            android:layout_toEndOf="@+id/detail_place_of_origin_tv"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/ingredients_tv" />

        <TextView
            android:id="@+id/detail_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/origin_tv"
            android:text="@string/detail_description_label"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:paddingStart="8dp"

            android:layout_height="wrap_content"
            android:layout_below="@+id/origin_tv"
            android:layout_toEndOf="@+id/detail_description_tv" />


    </RelativeLayout>

</ScrollView>